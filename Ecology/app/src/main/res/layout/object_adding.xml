<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/ecProblemPic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#1cab7c"
        android:padding="3dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"/>

    <EditText
        android:id="@+id/ecProblemDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="4"/>

    <RadioGroup
        android:id="@+id/ecProblemType"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="3dp">
            <RadioButton
                android:id="@+id/typeProblemSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/typeProblemMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/typeProblemLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:textSize="20sp"/>

    </RadioGroup>

    <Button
        android:id="@+id/ecSubmitProblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="20sp"
        android:text="Submit"/>

</LinearLayout>