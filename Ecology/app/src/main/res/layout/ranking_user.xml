<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="#000000"
        android:id="@+id/rankingProfile" />
    <TextView
        android:id="@+id/rankingUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Username"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:layout_alignTop="@+id/rankingProfile"
        android:layout_toRightOf="@+id/rankingProfile"
        android:layout_toEndOf="@+id/rankingProfile"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/rankingPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Points"
        android:layout_alignBaseline="@+id/rankingUsername"
        android:layout_alignBottom="@+id/rankingUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

</RelativeLayout>